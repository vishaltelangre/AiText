{
  "name": "ai-text",
  "version": "1.0.4",
  "description": "Use AI to do anything with the selected text!",
  "scripts": {
    "build:css:firefox": "tailwindcss -i ./src/input.css -o ./dist-firefox/output.css --minify",
    "build:css:chrome": "tailwindcss -i ./src/input.css -o ./dist-chrome/output.css --minify",
    "build:ts:firefox": "NODE_ENV=production BROWSER=firefox webpack --config webpack.config.js",
    "build:ts:chrome": "NODE_ENV=production BROWSER=chrome webpack --config webpack.config.js",
    "build:firefox": "rm -rf dist-firefox && pnpm build:css:firefox && pnpm build:ts:firefox",
    "build:chrome": "rm -rf dist-chrome && pnpm build:css:chrome && pnpm build:ts:chrome",
    "build": "pnpm type-check && pnpm format:check && pnpm build:firefox && pnpm build:chrome",
    "watch:css:firefox": "tailwindcss -i ./src/input.css -o ./dist-firefox/output.css --watch",
    "watch:css:chrome": "tailwindcss -i ./src/input.css -o ./dist-chrome/output.css --watch",
    "watch:ts:firefox": "NODE_ENV=development BROWSER=firefox webpack --config webpack.config.js --watch",
    "watch:ts:chrome": "NODE_ENV=development BROWSER=chrome webpack --config webpack.config.js --watch",
    "watch:firefox": "concurrently \"pnpm watch:css:firefox\" \"pnpm watch:ts:firefox\"",
    "watch:chrome": "concurrently \"pnpm watch:css:chrome\" \"pnpm watch:ts:chrome\"",
    "watch": "concurrently \"pnpm watch:firefox\" \"pnpm watch:chrome\"",
    "type-check": "tsc --noEmit",
    "format": "prettier --write --log-level silent \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --log-level silent --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "prepare": "pnpm format && ./scripts/setup-hooks.sh",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "package": "./scripts/package-extension.sh"
  },
  "dependencies": {
    "@types/dompurify": "^3.2.0",
    "@types/marked": "^6.0.0",
    "clsx": "^2.1.1",
    "dompurify": "^3.2.5",
    "marked": "^15.0.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@types/firefox-webext-browser": "^120.0.4",
    "@types/react": "^18.3.20",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "css-loader": "^6.11.0",
    "eslint": "^9.23.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "fork-ts-checker-webpack-plugin": "^9.1.0",
    "globals": "^16.0.0",
    "postcss": "^8.5.3",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "style-loader": "^3.3.4",
    "tailwindcss": "^3.4.17",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.2",
    "webextension-polyfill": "^0.12.0",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "packageManager": "pnpm@10.8.0+sha512.0e82714d1b5b43c74610193cb20734897c1d00de89d0e18420aebc5977fa13d780a9cb05734624e81ebd81cc876cd464794850641c48b9544326b5622ca29971"
}
