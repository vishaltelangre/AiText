{
  "name": "ai-text",
  "version": "1.0.2",
  "description": "Use AI to do anything with the selected text!",
  "scripts": {
    "build:css": "tailwindcss -i ./src/input.css -o ./dist/output.css --minify",
    "build:ts": "NODE_ENV=production webpack --config webpack.config.js",
    "build": "rm -rf dist && mkdir dist && pnpm type-check && pnpm format:check && pnpm build:css && pnpm build:ts",
    "watch:css": "tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "watch:ts": "NODE_ENV=development webpack --config webpack.config.js --watch",
    "watch": "concurrently \"pnpm watch:css\" \"pnpm watch:ts\"",
    "type-check": "tsc --noEmit",
    "format": "prettier --write --log-level silent \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --log-level silent --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "prepare": "pnpm format && ./scripts/setup-hooks.sh",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "package": "./scripts/package-extension.sh"
  },
  "dependencies": {
    "@types/dompurify": "^3.2.0",
    "@types/marked": "^6.0.0",
    "clsx": "^2.1.1",
    "dompurify": "^3.2.5",
    "marked": "^15.0.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@types/firefox-webext-browser": "^120.0.4",
    "@types/react": "^18.3.20",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "css-loader": "^6.11.0",
    "eslint": "^9.23.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "fork-ts-checker-webpack-plugin": "^9.1.0",
    "globals": "^16.0.0",
    "postcss": "^8.5.3",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "style-loader": "^3.3.4",
    "tailwindcss": "^3.4.17",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  }
}
