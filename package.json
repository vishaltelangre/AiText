{
  "name": "ai-text",
  "version": "1.0.0",
  "description": "Enhance text with AI",
  "scripts": {
    "build:css": "tailwindcss -i ./src/input.css -o ./dist/output.css --minify",
    "build:ts": "webpack --config webpack.config.js --mode production",
    "build": "pnpm format:check && pnpm build:css && pnpm build:ts",
    "watch:css": "tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "watch:ts": "webpack --config webpack.config.js --watch --mode development",
    "watch": "concurrently \"pnpm watch:css\" \"pnpm watch:ts\"",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "prepare": "pnpm format"
  },
  "dependencies": {
    "@types/dompurify": "^3.2.0",
    "@types/marked": "^6.0.0",
    "clsx": "^2.1.1",
    "dompurify": "^3.2.5",
    "marked": "^15.0.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/firefox-webext-browser": "^120.0.4",
    "@types/react": "^18.3.20",
    "@types/react-dom": "^18.3.5",
    "autoprefixer": "^10.4.17",
    "concurrently": "^9.1.2",
    "css-loader": "^6.10.0",
    "postcss": "^8.4.35",
    "postcss-loader": "^8.1.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "style-loader": "^3.3.4",
    "tailwindcss": "^3.4.1",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  }
}
